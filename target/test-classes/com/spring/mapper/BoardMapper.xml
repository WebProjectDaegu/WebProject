<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.mapper.BoardMapper">
<sql id="critreia">
		<trim prefix="(" suffix=") AND" prefixOverrides="OR">
			<foreach item='type' collection="arg1.searchTypeArr">
				<trim prefix="OR">
					<choose>
						<when test="type=='T'.toString()">
							title like '%' || #{arg1.keyword} || '%'
						</when>
						<when test="type=='C'.toString()">
							content like '%' || #{arg1.keyword} || '%'
						</when>
						<when test="type=='W'.toString()">
							writer like '%' || #{arg1.keyword} || '%'
						</when>
					</choose>
				</trim>
			</foreach>
		</trim>
	</sql>


	<insert id="registerBoard">
		insert into board_table (bbno,title,writer,content,membern,name,type,location) values(boardseq.nextval,#{title},#{writer},#{content},#{membern},#{name},#{type},#{location})
	</insert>
	<select id="getboardwithtype" resultType="com.spring.domain.BoardDTO">
		select * from board_table where
		 <include refid="critreia"></include>
		  type = #{arg0.type} order by bbno desc
		  
		  
		  
		  
		<![CDATA[select *
		from 
		(
		SELECT 
		ROWNUM * 
		FROM 
		tbl_board 
		WHERE
		]]>
		<include refid="critreia"></include>
		<![CDATA[
		ROWNUM<=#{arg1.pageNum}*#{arg1.amount} and type = #{arg0.type}
		)
		WHERE RN > (#{arg1.pageNum}-1)*#{arg1.amount} order by bbno desc
		]]>  
		  
		  
		  
		  
		  
		  
		  
		  
		  
		  
		  
		  
		  
		  
		  
	</select>
	<select id="getreviewwithlocation" resultType="com.spring.domain.BoardDTO">
		select * from board_table where location = #{location} and type='리뷰' order by bbno desc
		
	</select>
		<select id="getTotal" resultType="int">
		select count(bbno) from board_table where <include refid="critreia"></include>type = #{arg0.type} order by bbno desc
	</select>



</mapper>